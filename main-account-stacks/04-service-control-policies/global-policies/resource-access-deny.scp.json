{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "IAMRoleUpdateDeny",
      "Effect": "Deny",
      "Action": [
        "iam:AttachRolePolicy",
        "iam:CreateRole",
        "iam:DeleteRole",
        "iam:DeleteRolePermissionsBoundary",
        "iam:DeleteRolePolicy",
        "iam:DetachRolePolicy",
        "iam:PutRolePermissionsBoundary",
        "iam:PutRolePolicy",
        "iam:UpdateAssumeRolePolicy",
        "iam:UpdateRole",
        "iam:UpdateRoleDescription"
      ],
      "Resource": [
        "arn:aws:iam::*:role/Assumable*",
        "arn:aws:iam::*:role/CloudFormationRole"
      ],
      "Condition": {
        "ArnNotLike": {
          "aws:PrincipalARN": "arn:aws:iam::*:role/AWSCloudFormationStackSetExecutionRole"
        }
      }
    },
    {
      "Sid": "StackSetExecutionRoleDenyChanges",
      "Effect": "Deny",
      "Action": [
        "iam:AttachRolePolicy",
        "iam:CreateRole",
        "iam:DeleteRole",
        "iam:DeleteRolePermissionsBoundary",
        "iam:DeleteRolePolicy",
        "iam:DetachRolePolicy",
        "iam:PutRolePermissionsBoundary",
        "iam:PutRolePolicy",
        "iam:UpdateAssumeRolePolicy",
        "iam:UpdateRole",
        "iam:UpdateRoleDescription"
      ],
      "Resource": [
        "arn:aws:iam::*:role/AWSCloudFormationStackSetExecutionRole"
      ],
      "Condition": {
        "ArnNotLike": {
          "aws:PrincipalARN": "arn:aws:iam::*:role/${OrganizationAccountRoleName}"
        }
      }
    },
    {
      "NotAction": [
        "cloudformation:Describe*",
        "cloudformation:List*",
        "cloudformation:GetTemplate"
      ],
      "Effect": "Deny",
      "Resource": [
        "arn:aws:cloudformation:*:*:stack/StackSet-*"
      ],
      "Condition": {
        "ForAllValues:ArnNotLike": {
          "aws:PrincipalARN": [
            "arn:aws:iam::*:role/AWSCloudFormationStackSetExecutionRole",
            "arn:aws:iam::*:role/${OrganizationAccountRoleName}"
          ]
        }
      },
      "Sid": "DenyAccessToStackSetCloudformationStacks"
    }
  ]
}